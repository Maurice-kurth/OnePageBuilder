{% extends 'base.html.twig' %}
{% block body %}
  <section class="archive container">
    {% for post in blogPosts %}
      <article class="card p-6 my-6">
        <div class="article-title">
          <h3>{{ post.title }}</h3>
        </div>
        <div class="article-content">{{ post.content|u.truncate(45, '...')|raw }}</div>

        <a class="button is-primary my-4" href="{{ path('single_post', { id: post.id }) }}">Voir l'article</a>
      </article>
    {% endfor %}
  </section>
{% endblock %}
