{% extends 'base.html.twig' %}
{% block body %}
  <section class="hero is-primary is-small has-text-centered py-6">
    <h1 class="title">Mon profil</h1>
  </section>

  {% if user.siteweb %}
    <div class="container has-text-centered my-5">
      <p>Nom d'utilisateur : {{ user.username }}</p>

      <p>Nom de mon site web : {{ user.siteweb.nomSite }}</p>
      <a href="{{ path('builder_show', { nom_site: user.siteweb.nomSite }) }}" class="button is-primary">Voir mon site</a>
      <a href="{{ path('builder_form_js') }}" class="button is-info">Modifier mon site</a>
    </div>
  {% else %}
    <div class="container has-text-centered my-5">
      <p>Il semblerait que vous n'ayez pas encore de site...</p>
      <a href="{{ path('builder_form_js') }}" class="button is-primary">Cr√©ez un site maintenant !</a>
    </div>
  {% endif %}
  <div class="container">{{ form_start(editUserForm) }}
    {{ form_widget(editUserForm) }}
    {{ form_end(editUserForm) }}</div>
{% endblock %}
