{% extends 'base.html.twig' %}

{% block body %}
  {% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
  {% endif %}

  <div class="container has-text-centered my-6">
    <div class="columns">
      <div class="column is-4">
        <h1 class="title">Connectez-vous pour accéder à votre compte et site web</h1>
      </div>

      <div class="column is-4 is-narrow">
        <form action="{{ path('app_login') }}" method="post">
          <div class="field">
            <label class="label" for="username">Utilisateur</label>
            <div class="control">
              <input class="input" type="text" id="username" name="_username" value="{{ last_username }}" />
            </div>
          </div>
          <div class="field">
            <label class="label" for="password">Mot de passe:</label>
            <div class="control">
              <input class="input" type="password" id="password" name="_password" />
            </div>
          </div>

          {# Protection #}
          <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" />
          <div class="control">
            <button class="button is-link is-primary" type="submit">Connexion</button>
          </div>
        </form>
        {# If you want to control the URL the user is redirected to on success
                          <input type="hidden" name="_target_path" value="/account"/> #}
      </div>
    </div>
  </div>
{% endblock %}
