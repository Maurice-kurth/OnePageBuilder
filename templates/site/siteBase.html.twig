<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <title>
      {% block title %}
        Welcome!
      {% endblock %}
    </title>
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>" />
    {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
    {% block stylesheets %}
      {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
      {{ encore_entry_script_tags('app') }}
    {% endblock %}
  </head>
  <body>
    {% block header %}
      <nav class="navbar">
        <div class="container">
          <div class="navbar-brand">
            <a class="navbar-item" href="{{ path('builder') }}"><img src="/images/logo_lcdz.jpeg" alt="Logo" /></a>
            <span class="navbar-burger burger" data-target="navbarMenu"></span>
          </div>
          <div id="navbarMenu" class="navbar-menu">
            <div class="navbar-end">
              <div class="tabs is-right">
                <ul>
                  <li class="">
                    <a href="{{ path('builder') }}">Home</a>
                  </li>
                  <li>
                    <a href="{{ path('builder_form') }}">Construire ma page</a>
                  </li>
                  <li>
                    <a href="{{ path('app_register') }}">Connexion</a>
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </nav>
    {% endblock %}

    {% block body %}

    {% endblock %}
    {% block footer %}
      <footer class="footer">
        <div class="content has-text-centered">
          <a href="{{ path('app_logout') }}" class="button">Déconnexion</a>
        </div>
      </footer>
    {% endblock %}
    {% block specialStyles %}

    {% endblock %}
  </body>
</html>
