<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <title>
      {% block title %}
        Welcome to OnePage Builder !
      {% endblock %}
    </title>
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css" />
    {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
    {% block stylesheets %}
      {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
      {{ encore_entry_script_tags('app') }}
    {% endblock %}
  </head>
  <body>
    {% block header %}
      <header>
        <nav class="navbar" aria-label="main-navigation" role="navigation">
          <div class="container">
            <div class="navbar-brand">
              <a class="navbar-item" href="{{ path('builder') }}"><img src="/images/logo_lcdz.jpeg" alt="Logo" /></a>
              <a role="button" class="navbar-burger" data-target="navMenu" aria-label="menu" aria-expanded="false">
                <span aria-hidden="true"></span>
                <span aria-hidden="true"></span>
                <span aria-hidden="true"></span>
              </a>
            </div>
            <div class="navbar-menu" id="navMenu">
              <div class="navbar-end">
                <div class="tabs">
                  <ul>
                    <li class="">
                      <a href="{{ path('builder') }}">Accueil</a>
                    </li>
                    <li>
                      <a href="{{ path('app_blog') }}">Blog</a>
                    </li>
                    <li>
                      <a href="{{ path('a_propos') }}">À propos</a>
                    </li>
                    {% if is_granted('ROLE_USER') %}
                      <li>
                        <a href="{{ path('builder_form_js') }}"><b>Construire mon site</b></a>
                      </li>

                      <li>
                        <a href="{{ path('app_profile') }}">{{ user.username|default('') }} <i class="mx-2 fa-solid fa-circle-user"></i></a>
                      </li>

                      <li>
                        <a href="{{ path('app_logout') }}">Déconnexion</a>
                      </li>
                    {% else %}
                      <li>
                        <a href="{{ path('app_login') }}">Connexion</a>
                      </li>
                    {% endif %}
                  </ul>
                </div>
              </div>
            </div>
          </div>
        </nav>
      </header>
    {% endblock %}
    {% block body %}
      {% block pagetitle %}
        <h1>Titre de ma page</h1>
      {% endblock %}
    {% endblock %}
    {% block footer %}

    {% endblock %}
  </body>
</html>
