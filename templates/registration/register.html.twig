{% extends 'base.html.twig' %}

{% block body %}
  <section class="hero is-primary is-small py-6">
    <div class="container hero-body">
      <h1 class="is-size-1 has-text-white-ter">Inscription sur le site</h1>
    </div>
  </section>

  <div class="container tile my-6 p-4 has-background-light box">
    {{ form_start(registrationForm) }}
    {{ form_row(registrationForm.username, { label: 'Username', label_attr: { class: 'label' }, attr: { class: 'input' } }) }}
    {{ form_row(registrationForm.plainPassword, { label: 'Password', label_attr: { class: 'label' }, attr: { class: 'input' } }) }}
    {{ form_row(registrationForm.agreeTerms, { label_attr: { class: 'label' }, attr: { class: 'checkbox' } }) }}

    <button type="submit" class="button is-primary">Register</button>
    {{ form_end(registrationForm) }}
  </div>
{% endblock %}
